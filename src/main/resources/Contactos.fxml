<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="859.0" prefWidth="576.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ContactosController" stylesheets="@css/contactos.css">

   <children>
      <!-- Contenedor central -->
      <VBox layoutX="0" layoutY="50" alignment="CENTER" spacing="20" prefWidth="576" prefHeight="759">

         <!-- Botón regresar -->
         <HBox alignment="CENTER_LEFT" prefWidth="500">
            <Button fx:id="btnRegresar" text="⬅ Regresar" onAction="#ClickRegresar" styleClass="btn-principal"/>
         </HBox>

         <!-- Campo para agregar contacto -->
         <TextField fx:id="txtAgregarContacto" onAction="#enterUsuario" promptText="Agregar contacto" styleClass="text-field-principal" prefWidth="400"/>

         <!-- Tarjeta de contactos -->
         <ListView fx:id="listaContactos" prefWidth="450" prefHeight="600" styleClass="listview-tarjeta"/>

      </VBox>
   </children>
</AnchorPane>
