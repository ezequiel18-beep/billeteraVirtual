<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="859.0" prefWidth="576.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.TransferirController"
            stylesheets="@css/transferir.css"
            styleClass="root-pane">

   <children>
      <!-- Contenedor vertical principal -->
      <VBox alignment="CENTER" spacing="30" layoutX="0" layoutY="50" prefWidth="576">

         <!-- Título -->
         <Label text="¿Cuánto querés transferir?" styleClass="titulo">
            <font>
               <Font size="36"/>
            </font>
         </Label>

         <!-- TextField de monto -->
         <TextField fx:id="txtMontoAEnviar"
                    promptText="0"
                    text="/$"
                    alignment="CENTER_RIGHT"
                    prefHeight="150"
                    prefWidth="480"
                    styleClass="monto-textfield">
            <font>
               <Font size="77"/>
            </font>
         </TextField>

         <!-- Botones -->
         <HBox spacing="40" alignment="CENTER">
            <Button text="Cancelar"
                    onAction="#ClickCancelar"
                    prefWidth="180"
                    prefHeight="50"
                    styleClass="btn-secundario"/>

            <Button text="Enviar"
                    onAction="#ClickEnviar"
                    prefWidth="180"
                    prefHeight="50"
                    styleClass="btn-principal"/>
         </HBox>

      </VBox>
   </children>
</AnchorPane>
